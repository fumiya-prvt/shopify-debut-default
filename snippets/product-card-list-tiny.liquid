{% comment %}
    Renders a product card using "List" style

    Accepts:
    - product: {Object} Product Liquid object (required)
    - show_vendor: {Boolean} Show the product's vendor depending on the section setting (optional)

    Usage:
    {% include 'product-card-list-tiny', product: product, show_vendor: section.settings.show_vendor %}
{% endcomment %}
<div class="product-card product-card--list product-card--list-tiny">
  <a class="full-width-link" href="{{ product.url | within: collection }}">
    <span class="icon-popular"><span class="icon-popular-footer"></span></span>
    <span class="visually-hidden">{{ product.title }}</span>
  </a>
  <div class="list-view-item__link">
    <div class="yamato-product-card-container">
      {% if product.type == '山の都のオーガニック野菜セット' or product.type == 'オーガニック野菜' %}
        <span class="icon-organic-jas"><img src="{{ 'icon-organic-jas.png' | asset_url }}" alt=""></span>
      {% endif %}
      {%- for tag in product.tags -%}
        {%- if tag == 'オーガニック野菜（単品）' -%}
          <span class="icon-organic-jas"><img src="{{ 'icon-organic-jas.png' | asset_url }}" alt=""></span>
        {%- endif -%}
      {%- endfor -%}
      {%- for tag in product.tags -%}
        {%- if tag == 'お米セット' -%}
          <span class="icon-rice-set"><img src="{{ 'rice-set-icon_2x.jpg' | asset_url }}" alt=""></span>
        {%- endif -%}
      {%- endfor -%}
      <div class="list-view-item__image-wrapper product-card__image-wrapper">
      {% unless product.featured_media == null %}
        <img class="list-view-item__image" src="{{ product.featured_media | img_url: '200x200', scale: 2 }}" alt="{{ product.featured_media.alt }}">
      {% endunless %}
      </div>
    </div><!-- /.yamato-product-card-container -->
    <div class="list-view-item__title" aria-hidden="true">
      <span class="product-card__title">{{ product.title }}</span>
    </div>
    {% if show_vendor %}
      <div class="list-view-item__vendor">{{ product.vendor }}</div>
    {% endif %}
  </div>
</div>
