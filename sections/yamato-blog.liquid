<div class="page-width yamato-common-section">
  {% if section.settings.title != blank %}
    <header class="section-header text-center">
      <h2 class="heading-b01">
        <span class="heading-icon">{% render 'icon-heading-information' %}</span>
        <span class="heading-label">{{ section.settings.title | escape }}</span>
        <small>NEWS</small>
      </h2>
    </header>
  {% endif %}

  {%- assign blog = blogs[section.settings.blog] -%}

  {% unless blog.articles_count == 0 %}
    <ul class="yamato-blog-list">
      {% for article in blog.articles limit: section.settings.post_limit %}
        <li>
          <article aria-labelledby="FeaturedBlogTitle-{{ forloop.index0 }}-{{ section.id }}">
            <header>
              <a href="{{ article.url }}" class="article__link">
                {% if section.settings.blog_show_date %}
                  <span class="article__date">
                    {{ article.published_at | time_tag: '%Y.%m.%d' }}
                  </span>
                {% endif %}
                <span class="article__title">
                  {{ article.title }}
                </span>
              </a>
            </header>
          </article>
        </li>
      {% endfor %}
    </ul>
  {% endunless %}

  {% if section.settings.show_view_all %}
    <div class="text-center">
      <a href="{{ blog.url }}" class="btn" aria-label="{{ 'blogs.article.view_all_blogs' | t }}">
        お知らせ一覧を見る
      </a>
    </div>
  {% endif %}
</div>

